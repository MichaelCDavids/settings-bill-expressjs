<div class="container">
  <div class="row">
    <div class="six columns">
      <h5>Bill type</h5>
      <form action="action" method="post">
        <label class="">
          <input type="radio" name="billItemTypeWithSettings" class="billItemTypeWithSettings" value="call">
          <span class="label-body">Call</span>
        </label>
        <label class="">
          <input type="radio" name="billItemTypeWithSettings" class="billItemTypeWithSettings" value="sms">
          <span class="label-body">SMS</span>
        </label>
        <button class="button-primary" type="submit" name="button">Add</button>
      </form>

      <h5>Totals</h5>
      <table>
        <tr>
          <td>
            <a href="/actions/call">Call total</a>
          </td>
          <td>R
            <span class="callTotalSettings">{{billTotal.call}}</span>
          </td>
        </tr>
        <tr>
          <td>
            <a href="/actions/sms">SMS total</a>
          </td>
          <td>R
            <span class="smsTotalSettings">{{billTotal.sms}}</span>
          </td>
        </tr>
        <tr>
          <td>
            <a href="/actions">Total</a>
          </td>
          <td> R
            <span class="totalSettings {{billTotal.color}}">{{billTotal.total}}</span>
          </td>
        </tr>
      </table>
    </div>
    <div class="six columns">
      <h5>Settings</h5>
      <form action="/settings" method="post">
        <label for="exampleEmailInput">Call cost</label>
        <input class="u-full-width callCostSetting" type="number" placeholder="eg. 2.55" name="callCostSetting" value="{{keep.call}}" step="0.01">
        <label for="exampleEmailInput">SMS cost</label>
        <input class="u-full-width smsCostSetting" type="number" placeholder="eg. 0.65" name="smsCostSetting" value="{{keep.sms}}" step="0.01">
        <label for="">Warning level</label>
        <input class="u-full-width warningLevelSetting " type="number" placeholder="eg. 30.00" class="warningLevel" name="warningLevelSetting" value="{{keep.warning}}" step="0.01">
        <label for="">Critical level</label>
        <input class="u-full-width criticalLevelSetting" type="number" placeholder="eg. 65.00" name="criticalLevelSetting" value="{{keep.critical}}" step="0.01">
        <button class="button-primary updateSettings" type="submit" name="button">Update settings</button>
      </form>
    </div>
  </div>
</div>
</body>